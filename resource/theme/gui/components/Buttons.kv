#:kivy 2.2.1
#:import dp kivy.metrics.dp

<AppToolbar@MDToolbar>:
    elevation: 2
    left_action_items: []
    right_action_items: []
    md_bg_color: app.theme_cls.primary_color if app else (0.18, 0.36, 0.58, 1)
    specific_text_color: (1, 1, 1, 1)

<PrimaryRaisedButton@MDRaisedButton>:
    size_hint_y: None
    height: dp(48)
    md_bg_color: app.theme_cls.primary_color if app else (0.18, 0.36, 0.58, 1)
    text_color: (1, 1, 1, 1)

<SecondaryFlatButton@MDFlatButton>:
    size_hint_y: None
    height: dp(48)
