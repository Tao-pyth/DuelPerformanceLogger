#:kivy 2.2.1
#:import dp kivy.metrics.dp

<MenuHeroCard@MDCard>:
    hero_title: ""
    hero_body: ""
    primary_text: ""
    secondary_text: ""
    on_primary: lambda screen, *_: None
    on_secondary: lambda screen, *_: None
    parent_screen: None
    orientation: "vertical"
    padding: (dp(24), dp(24), dp(24), dp(24))
    spacing: dp(12)
    size_hint: 1, None
    height: dp(220)
    radius: [24, 24, 24, 24]
    md_bg_color: app.theme_cls.primary_color if app else (0.18, 0.36, 0.58, 1)

    MDLabel:
        text: root.hero_title if hasattr(root, "hero_title") else ""
        font_style: "H4"
        theme_text_color: "Custom"
        text_color: (1, 1, 1, 1)

    MDLabel:
        text: root.hero_body if hasattr(root, "hero_body") else ""
        theme_text_color: "Custom"
        text_color: (1, 1, 1, 0.85)
        text_size: self.width, None
        size_hint_y: None
        height: self.texture_size[1]

    MDBoxLayout:
        spacing: dp(12)
        size_hint_y: None
        height: dp(48)

        PrimaryRaisedButton:
            text: root.primary_text
            on_release: root.on_primary(root.parent_screen) if root.parent_screen else None

        SecondaryFlatButton:
            text: root.secondary_text
            theme_text_color: "Custom"
            text_color: (1, 1, 1, 1)
            on_release: root.on_secondary(root.parent_screen) if root.parent_screen else None

<MenuOptionCard@MDCard>:
    icon: ""
    title_key: ""
    description_key: ""
    parent_screen: None
    on_navigate: lambda *_: None
    orientation: "vertical"
    padding: dp(20)
    spacing: dp(12)
    size_hint: 1, None
    height: dp(180)
    radius: [18, 18, 18, 18]
    elevation: 2

    MDBoxLayout:
        spacing: dp(12)
        adaptive_height: True

        MDIcon:
            icon: root.icon
            size_hint: None, None
            size: dp(36), dp(36)

        MDLabel:
            text: root.parent_screen.t(root.title_key) if root.parent_screen else ""
            font_style: "H5"
            theme_text_color: "Primary"

    MDLabel:
        text: root.parent_screen.t(root.description_key) if root.parent_screen else ""
        theme_text_color: "Secondary"
        text_size: self.width, None
        size_hint_y: None
        height: self.texture_size[1]

    MDBoxLayout:
        size_hint_y: None
        height: dp(48)
        padding: 0, dp(12), 0, 0

        Widget:

        PrimaryRaisedButton:
            text: root.parent_screen.t("common.open") if root.parent_screen else "開く"
            on_release: root.on_navigate()

<DeckListItem@MDCard>:
    deck_name: ""
    description: ""
    on_delete: lambda *_: None
    orientation: "horizontal"
    padding: (dp(16), dp(12), dp(12), dp(12))
    spacing: dp(12)
    size_hint: 1, None
    height: dp(84)
    radius: [16, 16, 16, 16]

    MDBoxLayout:
        orientation: "vertical"
        spacing: dp(4)

        MDLabel:
            text: root.deck_name
            font_style: "Subtitle1"
            shorten: True

        MDLabel:
            text: root.description
            theme_text_color: "Secondary"
            shorten: True

    Widget:

    MDIconButton:
        icon: "delete"
        theme_text_color: "Custom"
        text_color: (0.86, 0.16, 0.16, 1)
        on_release: root.on_delete()

<SeasonListItem@MDCard>:
    season_name: ""
    remaining_text: ""
    on_delete: lambda *_: None
    orientation: "horizontal"
    padding: (dp(16), dp(12), dp(12), dp(12))
    spacing: dp(12)
    size_hint: 1, None
    height: dp(72)
    radius: [16, 16, 16, 16]

    MDLabel:
        text: root.season_name
        font_style: "Subtitle1"
        shorten: True
        size_hint_x: 0.55

    MDLabel:
        text: root.remaining_text
        theme_text_color: "Secondary"
        halign: "center"
        shorten: True
        size_hint_x: 0.35

    MDIconButton:
        icon: "delete"
        theme_text_color: "Custom"
        text_color: (0.86, 0.16, 0.16, 1)
        on_release: root.on_delete()

<SettingsSectionCard@MDCard>:
    orientation: "vertical"
    padding: dp(16)
    spacing: dp(12)
    size_hint: 1, None
    radius: [16, 16, 16, 16]
    adaptive_height: True
